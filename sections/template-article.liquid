<h1>{{ article.title }}</h1>

{% if section.settings.enable_author %}
  <small>{{ article.author }}</small>
{% endif %}

{% if section.settings.enable_published_date %}
  <time datetime="{{article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: '%Y-%m-%d' }}</time>
{% endif %}

{% comment %} You need to specify either a width or height parameter. If neither are specified, then an error is returned. {% endcomment %}
<img src="{{article.image |  image_url: width: 600, height: 600 }}" alt="{{ article.image.alt }}">

<div>
  {{ article.content }}</div>

{% schema %}
  {
    "name": "Template Article",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_author",
        "default": true,
        "label": "Display Author Name"

      }, {
        "type": "checkbox",
        "id": "enable_published_date",
        "default": true,
        "label": "Display Published Date"
      }

    ],
    "blocks": [
      {
        "type": "article_title",
        "name": "Title",
        "limit": 1
      },
      {
        "type": "article_author",
        "name": "Author",
        "limit": 1
      },
      {
        "type": "author_published_date",
        "name": "Published Date",
        "limit": 1
      },
      {
        "type": "featured_image",
        "name": "Thumbnail",
        "limit": 1
      }, {
        "type": "article_content",
        "name": "Content",
        "limit": 1
      }
    ]
  }
{% endschema %}